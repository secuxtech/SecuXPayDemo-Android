<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TokenTransHistoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transactions"
        android:textSize="20dp"
        android:textColor="#757575"
        android:textStyle="bold"

        android:layout_marginTop="16sp"
        android:layout_marginLeft="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_transhistory_nohistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="No transaction history"
        android:textSize="19sp"
        android:textColor="@color/colorLabel"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_transhistory_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60sp"

        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginBottom ="20sp"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight = "16sp"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft = "16sp" />

    <!--
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_account_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#ffffff"

        app:menu="@menu/menu_account_operation_navbar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>

