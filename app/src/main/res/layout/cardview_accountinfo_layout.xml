<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBkg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_coinlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dct"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:padding = "5dp"/>

            <TextView
            android:id="@+id/textView_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="account name"
            android:textSize="15sp"
            android:textColor="@color/colorAccountInfo"

            android:layout_toRightOf="@+id/imageView_coinlogo"
            android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_account_usdbalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="$3321.33"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccountInfo"/>

                <TextView
                    android:id="@+id/textView_account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:text="99993.23 IFC"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccountInfo"/>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
